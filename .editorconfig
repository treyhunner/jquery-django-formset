# http://editorconfig.org

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{html,js}]
indent_style = space
indent_size = 2

[{node_modules,tests/vendor}/**]
end_of_line = ignore
trim_trailing_whitespace = ignore
insert_final_newline = ignore
indent_style = igore
indent_size = ignore
